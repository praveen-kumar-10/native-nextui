{
  "name": "native-nextui",
  "version": "0.1.0",
  "description": "Make beautiful Native Applications regardless of your design.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace native-nextui-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "husky && bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praveen-kumar-10/native-nextui.git"
  },
  "author": "N Praveen Kumar <praveennetinti2002@gmail.com> (https://github.com/praveen-kumar-10)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/praveen-kumar-10/native-nextui/issues"
  },
  "homepage": "https://github.com/praveen-kumar-10/native-nextui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@evilmartians/lefthook": "^1.6.10",
    "@react-native/eslint-config": "^0.74.83",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.2",
    "commitlint": "^19.3.0",
    "del-cli": "^5.1.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-native": "^0.74.1",
    "react-native-builder-bob": "^0.23.2",
    "release-it": "^17.2.1",
    "typescript": "^5.4.5"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "jest": {
    "preset": "react-native",
    "cacheDirectory": "./cache/jest",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "watchPathIgnorePatterns": [
      "__fixtures__\\/[^/]+\\/(output|error)\\.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native(-.*)?)/)"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
